{
  "name": "pdiiif",
  "version": "0.1.0",
  "description": "Generate PDFs with page labels and a table of contents from IIIF manifests",
  "scripts": {
    "format": "prettier -w ./src",
    "lint": "eslint . --ext .ts && tsc --noemit",
    "pretest": "tsc --noemit",
    "posttest": "eslint . --ext .ts",
    "prepack": "rm -rf lib && tsc -b",
    "test": "jest",
    "test:integration": "ts-node --log-error src/run.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbaiter/pdiiif-lib.git"
  },
  "keywords": [
    "iiif",
    "pdf"
  ],
  "author": "Johannes Baiter <johannes.baiter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbaiter/pdiiif-lib/issues"
  },
  "homepage": "https://github.com/jbaiter/pdiiif-lib#readme",
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "lodash": "^4.17.20",
    "manifesto.js": "^4.1.0",
    "pdfkit": "^0.11.0",
    "tslib": "^1.13.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/node": "^10.17.32",
    "@types/node-fetch": "^2.5.12",
    "@types/pdfkit": "^0.10.6",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-recommended": "^4.1.0",
    "globby": "^10.0.2",
    "jest": "^26.4.2",
    "jest-fetch-mock": "^3.0.3",
    "pdf-lib": "^1.16.0",
    "prettier": "^2.1.1",
    "tmp": "^0.2.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/src/__tests__/setupJest.ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
