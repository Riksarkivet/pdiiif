{
  "name": "pdiiif-web",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dev": "tsnd --respawn src/server.ts",
    "format": "prettier -w ./src",
    "lint": "eslint . --ext .ts && tsc --noemit",
    "pretest": "tsc --noemit",
    "posttest": "eslint . --ext .ts",
    "prepack": "rm -rf dist && tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbaiter/pdiiif-api.git"
  },
  "keywords": [
    "iiif",
    "pdf"
  ],
  "author": "Johannes Baiter <johannes.baiter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbaiter/pdiiif-api/issues"
  },
  "homepage": "https://github.com/jbaiter/pdiiif-api#readme",
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.6.1",
    "@types/node-fetch": "^2.5.12",
    "@types/qrcode-svg": "^1.1.1",
    "@types/sanitize-html": "^2.5.0",
    "@types/wicg-file-system-access": "^2020.9.2",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@wesleytodd/openapi": "^0.1.0",
    "accept-language-parser": "^1.5.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "manifesto.js": "^4.2.4",
    "node-fetch": "^2.6.1",
    "pdiiif": "file:../pdiiif-lib",
    "puppeteer": "^11.0.0",
    "qrcode-svg": "^1.1.0",
    "sanitize-html": "^2.5.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
